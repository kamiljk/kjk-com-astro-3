---
import "../styles/global.scss";
---

<div class="test-specimen">
  <!-- Header Section -->
  <header>
    <h1>CSS Specimen Test Box</h1>
    <p>
      This component showcases all the styles used in the project.
    </p>
  </header>

  <!-- Typography Section -->
  <section id="typography">
    <h2>Typography</h2>
    <p>Body text example. This is a paragraph styled with the current theme.</p>
    <a href="#">This is a link</a>
    <button>This is a button</button>
  </section>

  <!-- Boxes Section -->
  <section id="boxes">
    <h2>Boxes</h2>
    <div class="box">This is a box</div>
    <div class="box">Another box with the same styles</div>
  </section>

  <!-- Navigation Section -->
  <section id="navigation">
    <h2>Navigation</h2>
    <nav>
      <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">About</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
    </nav>
  </section>

  <!-- Theme Toggle Section -->
  <section id="theme-toggle">
    <h2>Theme Toggle</h2>
    <div class="theme-toggle">
      <button onclick="toggleTheme()">Toggle Theme</button>
    </div>
  </section>
</div>

<style>
  /* General Styles */
  .test-specimen {
    padding: 2rem;
    margin: 2rem;
    background-color: var(--background-color);
    color: var(--text-color);
    border: 2px dashed var(--accent-color-muted);
    border-radius: 0.5rem;
  }

  /* Header Styles */
  .test-specimen header h1,
  .test-specimen header p {
    color: var(--accent-color);
  }

  /* Typography Styles */
  #typography a {
    text-decoration: none;
    color: var(--accent-color);
    transition: color 0.3s;
  }

  #typography a:hover {
    color: var(--accent-color-light);
  }

  #typography button {
    padding: 0.5rem 1rem;
    background-color: var(--accent-color);
    color: var(--accent-color-contrast);
    border: none;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  #typography button:hover {
    background-color: var(--accent-color-light);
  }

  /* Box Styles */
  #boxes .box {
    margin: 1rem 0;
    padding: 1rem;
    background-color: var(--box-bg);
    border: 1px solid var(--accent-color-muted);
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  /* Navigation Styles */
  #navigation nav ul {
    display: flex;
    gap: 1rem;
    list-style: none;
    padding: 0;
  }

  #navigation nav a {
    text-decoration: none;
    color: inherit;
    transition: color 0.3s;
  }

  #navigation nav a:hover {
    color: var(--accent-color-light);
  }
</style>
